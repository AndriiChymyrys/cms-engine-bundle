{% extends '@MorphView/layout.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    {{ morph_block_render('cms.stylesheets.page.edit') }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ morph_block_render('cms.javascripts.page.edit') }}
{% endblock %}

{% block page_content %}
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex p-0">
                    <h2 class="card-title p-3">Edit {{ page.name }}</h2>
                    <ul class="nav nav-pills ml-auto p-2">
                        <li class="nav-item"><a class="nav-link active" href="javascript:void(0);" data-toggle="tab">Content Blocks</a></li>
                        <li class="nav-item"><a class="nav-link" href="{{ path('cms_backoffice_edit_page_content_template', {pageId: page.id}) }}" data-toggle="tab">Content Templates</a></li>
                    </ul>
                </div>
            </div>
            <block :content-blocks="{{ contentBlocks|json_encode }}"
                   :content-types="{{ contentTypes|json_encode }}"
                   :page="{{ page.vueData|json_encode }}"/>
        </div>
    </div>
{% endblock page_content %}
